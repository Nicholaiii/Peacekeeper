{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "lib": ["ESNext"],
    "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
